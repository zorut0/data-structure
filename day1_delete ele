#include <stdio.h>
#define MAX_SIZE 100
int main()
{
    int arr[MAX_SIZE];
    int i,size,p;
    printf("Enter size of the array : ");
    scanf("%d",&size);
    printf("Enter elements in array : ");
    for(i=0;i<size;i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("Enter the element position to delete : ");
    scanf("%d",&p);
    if(p<0||p>size)
    {
        printf("Invalid position!");
    }
    else
    {
        for(i=p-1;i<size-1;i++)
        {
            arr[i]=arr[i+1];
        }
        size=size-1;
        printf("\nElements of array after delete are : ");
        for(i=0;i<size;i++)
        {
            printf("%d ", arr[i]);
        }
    }
    printf("RgNo:192325031");
    return 0;
}
